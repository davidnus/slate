{
  "presets": [
    ["env", {
      "modules": false
    }],
    "react",
    "stage-0",
    "stage-2"
  ],
  "plugins": ["external-helpers"],
  "env": {
    "webpack": {
      "presets": [
        ["env", {
          "modules": false
        }],
        "react",
        "stage-0",
        "stage-2"
      ],
      "plugins": [
        "transform-runtime",
        "react-hot-loader/babel"
      ]
    },
    "test": {
      "presets": [
        ["env", {
          "exclude": ["transform-regenerator"]
        }],
        "react",
        "stage-0",
        "stage-2"
      ],
      "plugins": [
        "transform-runtime",
        ["module-resolver", {
          "alias" : {
            "^(slate.*)": "./packages/\\1/src"
          }
        }],
        "istanbul"
      ]
    },
    "benchmark": {
      "presets": [
        ["env", {
          "exclude": ["transform-regenerator"]
        }],
        "react",
        "stage-0",
        "stage-2"
      ],
      "plugins": ["transform-runtime"]
    }
  }
}
